{
  "name": "frui",
  "version": "0.0.13",
  "license": "MIT",
  "description": "A collection of vanilla react and tailwind components written in typescript.",
  "author": "Chris <chris@incept.asia>",
  "homepage": "https://github.com/cblanquera/frui",
  "bugs": "https://github.com/cblanquera/frui/issues",
  "repository": "cblanquera/frui",
  "types": "index.d.ts",
  "scripts": {
    "build": "npm run build:tsc && npm run build:files",
    "build:tsc": "tsc",
    "build:files": "cp ./README.md ./dist/ && cp ./package.json ./dist/ && cp ./LICENSE ./dist/",
    "bundle": "webpack --mode production && rm -rf ./dist/src && rm -rf ./dist/build",
    "start": "webpack serve --mode development"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "inputmask": "5.0.8",
    "markdown-to-jsx": "7.2.0",
    "moment": "2.29.4"
  },
  "devDependencies": {
    "@types/inputmask": "5.0.3",
    "@types/node": "20.2.5",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "html-webpack-plugin": "5.5.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.1",
    "typescript": "5.0.4",
    "webpack": "5.86.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-middleware": "6.1.1",
    "webpack-dev-server": "4.15.1",
    "webpack-hot-middleware": "2.25.3"
  }
